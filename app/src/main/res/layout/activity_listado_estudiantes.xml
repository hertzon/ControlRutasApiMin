<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coltrack.controlrutasapimin.ListadoEstudiantes">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Listado de Estudiantes"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ExpandableListView


        android:id="@+id/lvExp"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView6"
        android:layout_weight="0.09"
        android:choiceMode="singleChoice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estudiante Seleccionado:"
        android:id="@+id/textView7"
        android:layout_below="@+id/lvExp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_estudianteSeleccionado"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Codigo Estudiante"
        android:id="@+id/textView8"
        android:layout_below="@+id/editText_estudianteSeleccionado"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_codigoEstudiante"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movil Acudiente"
        android:id="@+id/textView9"
        android:layout_below="@+id/editText_codigoEstudiante"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eventos"
        android:id="@+id/textView10"
        android:layout_below="@+id/editText_telefonoAcudiente"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_telefonoAcudiente"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true" />





    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tableLayout">


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true">
            <Button

                android:text="Subio Ruta"
                android:id="@+id/button_subio"
                android:textSize="20dp"
                android:layout_width="300px" />

            <Button

                android:text="Subio Ruta SMS"
                android:textSize="20dp"
                android:id="@+id/button_subiosms"
                android:layout_width="300px" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true">
            <Button

                android:text="Bajo Ruta"
                android:id="@+id/button_bajo"
                android:textSize="30dp"
                android:layout_width="300px" />

            <Button

                android:text="Bajo Ruta SMS"
                android:textSize="30dp"
                android:id="@+id/button_bajosms"
                android:layout_width="300px" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true">
            <Button

                android:text="Llamar Acudiente"
                android:id="@+id/button_llamarAcudiente"
                android:textSize="30dp"
                android:layout_width="300px" />

        </TableRow>
    </TableLayout>








</RelativeLayout>
